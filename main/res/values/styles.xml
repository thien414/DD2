<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LN_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LN_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textTile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textTileSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textContentSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorcontent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="btnThem">
        <item name="android:background">@drawable/clickbtn</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_add_box_black_24dp</item>
        <item name="android:text">@string/btnThem</item>
    </style>

    <style name="btnXoa">
        <item name="android:background">@drawable/clickbtn</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_delete_black_24dp</item>
        <item name="android:text">@string/btnXoa</item>
    </style>

    <style name="btnSua">
        <item name="android:background">@drawable/clickbtn</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_refresh_black_24dp</item>
        <item name="android:text">@string/btnSua</item>
    </style>

    <style name="btnClear">
        <item name="android:background">@drawable/clickbtn</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_clear_all_black_24dp</item>
        <item name="android:text">@string/btnClear</item>
    </style>

    <style name="lvDelete">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/imgDelete</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_delete_forever_black_24dp</item>
    </style>


    <style name="btnTable">
        <item name="android:background">@drawable/clickbtn_table</item>
        <item name="android:paddingRight">@dimen/padingBtn</item>
        <item name="android:layout_margin">@dimen/maginBtn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_last_page_black_24dp</item>
    </style>

</resources>
