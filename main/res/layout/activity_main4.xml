<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.Main4">

    <TextView
        style="@style/textContent"
        android:text="@string/showcnvpp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtTKCNVPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/edttkvpp" />

        <Button
            android:id="@+id/btnTKCNVPP"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_black_24dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvCNVPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorlv"></ListView>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnThem_cnvpp"
        style="@style/btnTable"
        android:text="@string/btnCapNhatVPP" />

    <LinearLayout style="@style/LN_horizontal">
        <Button
            android:id="@+id/btnThongKeCNVPP"
            android:layout_weight="1"
            style="@style/btnTable"
            android:text="@string/btnThongKe" />

        <Button
            android:id="@+id/btnDSCNVPP_GoIndex"
            android:layout_weight="1"
            style="@style/btnTable"
            android:text="@string/btnIndex" />
    </LinearLayout>
</LinearLayout>